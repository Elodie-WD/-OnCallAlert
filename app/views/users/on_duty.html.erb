<div class="container-wrapper">
  <h1>Bonjour <%= @user.first_name %> 👋🏻</h1>
   <div class="text-content">
    <div class="text-content-infos">
      <div class="elements-profil-box">
        <%= link_to "", class: "icons-profil" do %>
          <%= image_tag "icon1.png" %>
        <% end %>
        <p class="text-box-profil">Situation actuelle: <span class="p-grey">en astreinte</span></p>
      </div>
      <div class="elements-profil-box">
      <%= link_to "", class: "icons-profil" do %>
          <%= image_tag "icon2.png" %>
        <% end %>
      <p class="text-box-profil">Prochaine astreinte:  <span class="p-grey"><%= @on_call.date.to_date %></span></p>
      </div>
      <div class="elements-profil-box">
        <%= link_to "", class: "icons-profil" do %>
            <%= image_tag "icon3.png" %>
          <% end %>
        <p class="text-box-profil">Prochaine garde:  <span class="p-grey"><%= @on_duty.date.to_date %></span></p>
      </div>
    </div>
  </div>
  <div class="grid-wrapper" data-controller="activation">
    <div class="wrapper left-wrapper" data-activation-target="card">
      <div class="circle-wrapper"></div>
      <div>
      <%= link_to "Personne d'astreinte", contact_path() %>
    <%# <h6>Personne</h6><h6>D'astreinte</h6> %>
      </div>
    </div>
    <div class="wrapper right-wrapper">
      <div class="circle-wrapper">
      <%= link_to "", bookings_path() %>
      </div>
      <div>
        <h6>Mon</h6><h6>Planning</h6>
      </div>
  </div>

  </div>
  <div class="content-btn">
    <%= link_to contact_path, class: "big-btn-message" do %>
      <h6>Contacter<br>la personne d'astreinte</h6>
    <% end %>
    </div>
</div>
