<div class="container-connexion">
  <div class="box-connexion">
    <h2 class="titre-connexion">Connexion</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" },
                    label: "Adresse email" %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "mot de passe actuel" },
                     label: "Mot de passe" %>
        <%= f.input :remember_me, as: :boolean, label: "Se souvenir de moi"  if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Connexion", class: "big-btn-message-connexion" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
