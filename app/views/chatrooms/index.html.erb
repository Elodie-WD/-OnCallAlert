<div class="container-historique">

  <div class="text-en-tete-historique">
    <div class="row">
      <div class="col">
        <%= link_to "Retour", rooting_path(), class: "text-historique" %>
      </div>
      <div class="col">
        <h2 class="title-historique">Historique</h2>
      </div>
      <div class="col">
        <h4 class="text-historique">Filtres</h4>
      </div>
    </div>
  </div>

<div class="search">
  <div class="input-group rounded">
    <input type="search" class="form-control rounded" placeholder="Recherche" aria-label="Search" aria-describedby="search-addon" />
    <span class="input-group-text border-0" id="search-addon">
      <i class="fas fa-search"></i>
    </span>
  </div>
</div>

<div class="text-tableau-historique">
  <div class="row">
    <div class="col-3">
      <h4 class="text-historique"></h4>
    </div>
    <div class="col-5">
      <h4 class="text-historique">Nom</h4>
    </div>
    <div class="col-4">
      <h4 class="text-historique">Date</h4>
    </div>
  </div>
</div>


<div class="list-group">
  <% @chatrooms.each do |chatroom| %>
    <div class="list-group-item">
      <div class="row">

        <div class="col-3">
          <div class="background-icon-historique">
              <%= link_to "", class: "icon-historique" do %>
              <%= image_tag "icons-message.png" %>
            <% end %>
          </div>
        </div>

        <div class="col-5">
          <h2 class="nom-historique"><%= link_to @contact.first_name, chatroom_path(chatroom) %></h2>
        </div>

        <div class="col-4">
           <span class="date-historique"><%= chatroom.date %></span>
        </div>

    </div>
  <% end %>
</div>


  </div>
</div>
